[flake8]
max-line-length = 100
exclude =
    # No need to lint vitrual environment
    .venv,
    # No need to traverse git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
    # The conf file is mostly autogenerated, ignore it
    docs/source/conf.py,
    # Ignoring packaging files
    weekendflights.egg-info